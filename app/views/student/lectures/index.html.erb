<div class="welcom_admin">
  <div class="welcom_admin_inner">
    <div class="heding_top">
      <span>Lectures Index</span>
    </div>
    <% if @lectures.present? %>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Lecture</th>
            <th scope="col">Faculty</th>
            <th scope="col">Subject</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @lectures.each_with_index do |lecture,index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= lecture.id %></td>
            <td><%= lecture.faculty.name %></td>
            <td><%= lecture.faculty_subject.subject.name %></td>
            <td><%= link_to( 'Edit', edit_lecture_path(lecture.id) ) %></td>
            <td><%= link_to( "Delete", lecture_path(lecture.id), method: :delete, data: { confirm: "You sure to delete lecture? This cannot be undone." }) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>No Lectures to show</h3>
    <% end %>
  </div>
</div>
