<div class="welcom_admin">
  <div class="welcom_admin_inner">
    <div class="heding_top">
      <span>All HODs</span>
      <%= link_to( 'Add HOD',new_admin_user_path ) %>
    </div>
    <% if @users.present? %>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th scope="col">Confirmed</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user,index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= user.name.titleize %></td>
            <td><%= user.email %></td>
            <td><%= user.department.present? ? user.department.name.titleize : "No department Assigned" %></td>
            <td><%= user.confirmed? ? 'Already Confirmed' : 'Confirmation Pending' %></td>
            <td><%= link_to( 'Edit', edit_admin_user_path(user.id) ) %></td>
            <td>
              <%= link_to( "Delete", admin_user_path(user.id), method: :delete, data: { confirm: "You sure to remove HOD? This cannot be undone." }) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h5>No HOD available to show</h5>
    <% end %>
  </div>
</div>
